<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.surya.knitconfession.SettingActivity">
    <include layout="@layout/app_bar_layout"
        android:id="@+id/setting_app_bar"
        >
    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/setting_app_bar"

        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="5dp"

                android:id="@+id/setting_profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/us"
                />

            <EditText
                android:layout_margin="10dp"
                android:id="@+id/setting_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_profileImage"
                android:hint="Status"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input"
                android:padding="10dp"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                />


            <LinearLayout
                android:id="@+id/layoutofusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input2"
                android:layout_below="@+id/setting_status"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/usericon"
                    />
            <EditText
                android:layout_marginBottom="5dp"
                android:background="@drawable/input2"
                android:id="@+id/setting_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_status"
                android:hint="User Name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/layoutoforcollege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input2"
                android:layout_below="@+id/layoutofusername"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/collegenameicon"
                    />
            <EditText
                android:layout_marginBottom="5dp"
                android:id="@+id/setting_collegename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="College Name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/input"
                android:padding="10dp"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"

                />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/layoutoforbranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input2"
                android:layout_below="@+id/layoutoforcollege"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/iconforbranch"
                />

            <EditText
                android:layout_marginBottom="5dp"
                android:id="@+id/setting_Branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Branch"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/input"
                android:padding="10dp"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/layoutoforyear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input2"
                android:layout_below="@+id/layoutoforbranch"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/iconfortime"
                />


            <EditText
                android:layout_marginBottom="5dp"
                android:id="@+id/setting_Year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Year"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/input"
                android:padding="10dp"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/layoutoforgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input2"
                android:layout_below="@+id/layoutoforyear"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/gendericon"
                />

            <EditText
                android:layout_marginBottom="5dp"
                android:id="@+id/setting_Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutoforyear"
                android:hint="Gender"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/input"
                android:padding="10dp"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/layoutoforrelationship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input2"
                android:layout_below="@+id/layoutoforgender"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/heart"
                />
            <EditText
                android:layout_marginBottom="5dp"
                android:id="@+id/setting_relationshipstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutoforgender"
                android:hint="Relation Ship Status"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/input"
                android:padding="10dp"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/layoutoforDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input2"
                android:layout_below="@+id/layoutoforrelationship"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/birth"
                />
            <EditText
                android:layout_marginBottom="5dp"
                android:id="@+id/setting_DOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutoforrelationship"
                android:hint="DOB (Birthday)"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/input"
                android:padding="10dp"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />
            </LinearLayout>


            <Button
                android:text="Update Account Setting"
                android:background="@drawable/button"
                android:id="@+id/setting_update_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:layout_below="@+id/layoutoforDOB"
                />



        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
