<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.surya.knitconfession.CommentActivity">
    <include layout="@layout/app_bar_layout"
        android:id="@+id/appbar_commentsActivity"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/appbar_commentsActivity"
        android:id="@+id/commentRecycler"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_above="@+id/aisehi">

    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/input2"
        android:id="@+id/aisehi"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"

        >

        <EditText
            android:id="@+id/comments_CommentsBox"
            android:layout_width="match_parent"
            android:layout_weight="85"
            android:layout_height="match_parent"
            android:background="@drawable/input2"
            android:hint="Write Comments"/>
        <Button
            android:padding="2dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/comments_commentButton"
            android:background="@drawable/sendicon"

            />

    </LinearLayout>

</RelativeLayout>
